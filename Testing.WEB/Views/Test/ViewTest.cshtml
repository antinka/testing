@model IEnumerable<Testing.BLL.DTO.ViewTestSubDTO>

@{
    ViewBag.Title = "ViewTest";
}

<p>
    @Html.ActionLink("Добавить тест", "AddTest", new { subjectId = ViewBag.subjectId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Runtime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Difficult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountQuestion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Runtime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Difficult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountQuestion)
        </td>
        <td>
            @Html.ActionLink("Редактировать тест", "EditTest", new { id = item.IdTest, subjectId = ViewBag.subjectId }) |
            @Html.ActionLink("Вопросы", "ViewQuestion", "TestQuestion", new { id = item.IdTest, subjectId = ViewBag.subjectId }, null) |
            @Html.ActionLink("Удалить тест", "DeleteTest", new { id = item.IdTest, subjectId = ViewBag.subjectId })
        </td>
    </tr>
}

</table>

