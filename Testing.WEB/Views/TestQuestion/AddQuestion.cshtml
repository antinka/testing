
@{
    ViewBag.Title = "AddQuestion";
}

    <h2>Добавить вопрос</h2>

    @using (Html.BeginForm())
    { 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">
                    Вопрос
                </label>
                <div class="col-md-10">
                    @Html.TextBox("question", "", new { @class = "form-control" })
                    @Html.ValidationMessage("question", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Ответы
                </label>
                    <div class="col-md-10" id="questionAswer">
                        <input type="text" name="aswer" value="" class="form-control" />
                        <input type="text" name="aswer" value="" class="form-control" />
                        @Html.ValidationMessage("aswer", "", new { @class = "text-danger" })
                    </div>
            </div>

            <p><a class="addLink">Добавить вариант ответа</a></p>
            <input type="hidden" name="subjectId" value="@ViewBag.subjectId" />
            <input type="hidden" name="idTest" value="@ViewBag.idTest" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

@section Scripts {
    <script>

        $(function () {
            $('.addLink').click(function () {
                $('#questionAswer').append('<input type="text" name="aswer" value="" class="form-control"/>');
            })
        })
    </script>
}